{% extends "layout.njk" %}

{% block content %}
<main class="wrapper">
  <h1>
    {{ title }}
  </h1>
  <form action="/artists/{{ artist.id }}/edit" method="post">
    <label for="name">Enter the artists name:</label>
    <input type="text" id="name" name="name" value="{{ artist.name }}" required>
    <input type="submit" value="Edit">
  </form>
</main>
{% endblock %}